<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".view.Login_Page.login_main">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="376dp"
            android:layout_height="270dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.485"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.498">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="vertical">
                
                <EditText
                    android:id="@+id/userName"
                    android:layout_marginTop="10dp"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Username or Email"
                    android:paddingBottom="20dp"
                    android:textSize="14sp"
                    android:textColorHint="#83868C"
                    android:inputType="textEmailAddress"
                    android:drawableEnd="@drawable/login_person_icon" />

                <EditText
                    android:id="@+id/userPassword"
                    android:layout_marginTop="20dp"
                    android:layout_width="340dp"
                    android:textSize="14sp"
                    android:paddingBottom="20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Password"
                    android:textColorHint="#83868C"
                    android:inputType="textPassword"
                    android:drawableEnd="@drawable/login_eye" />
                
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/loginBtn"
                    android:layout_width="340dp"
                    android:layout_height="37dp"
                    android:layout_marginTop="25dp"
                    android:text="LOGIN"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/white"
                    android:background="@drawable/login_btn"
                    android:layout_gravity="center"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/lato_400"
                        android:text="New Customer"
                        android:textSize="14sp"
                        android:textColor="#83868C"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.521" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:fontFamily="@font/lato_400"
                        android:text="Forget Password"
                        android:textSize="14sp"
                        android:textColor="#83868C"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.912"
                        app:layout_constraintStart_toEndOf="@+id/textView3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.521" />

                </androidx.constraintlayout.widget.ConstraintLayout>



                
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    


</FrameLayout>